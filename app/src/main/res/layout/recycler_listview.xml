<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/card_padding"
    android:paddingRight="@dimen/card_padding"
    android:paddingBottom="@dimen/card_padding_bottom"
    android:paddingTop="@dimen/card_padding_top">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:background="#e65252"
            android:layout_height="wrap_content">

            <!-- Thumbnail Image -->
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/enter"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp" />


            <!-- First Name -->
            <TextView
                android:id="@+id/fName"
                android:text="Krutarth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:textStyle="bold" />

            <!-- Last Name -->
            <TextView
                android:id="@+id/lName"
                android:text="Doshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/fName"
                android:textStyle="bold" />


            <!-- Email -->
            <TextView
                android:id="@+id/email"
                android:text="krutarthdoshi14@gmail.com"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fName"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail" />


            <!-- Message -->
            <TextView
                android:id="@+id/notification"
                android:text="Registered in your community."
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/thumbnail" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>